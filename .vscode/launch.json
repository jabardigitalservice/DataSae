{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Create venv",
            "type": "python",
            "request": "launch",
            "module": "venv",
            "args": ["venv/"]
        },
        {
            "name": "PyPI: Install",
            "type": "python",
            "request": "launch",
            "module": "pip",
            "args": [
                "install",
                "build",
                "twine",
                "flake8",
                "."
            ]
        },
        {
            "name": "Test: Linter",
            "type": "python",
            "request": "launch",
            "module": "flake8",
            "args": ["--exclude", "venv/"],
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "Test: Unit Test",
            "type": "python",
            "request": "launch",
            "module": "unittest"
        },
        {
            "name": "Build Package",
            "type": "python",
            "request": "launch",
            "module": "build",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        },
        {
            "name": "TestPyPI: Install",
            "type": "python",
            "request": "launch",
            "module": "pip",
            "args": [
                "install",
                "--index-url", "https://test.pypi.org/simple/",
                "--upgrade",
                "DataSae"
            ]
        }
    ]
}
